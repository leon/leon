{
  "packageManager": "pnpm@7.13.4",
  "private": true,
  "name": "leon",
  "description": "leon.id",
  "license": "",
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf build && rm -rf public/build",
    "build": "pnpm build:css && pnpm remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --minify",
    "build:assets": "cpy --parents {articles,labs,photos,projects} public",
    "dev": "concurrently \"pnpm dev:css\" \"pnpm remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --watch",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@mdx-js/mdx": "^2.2.1",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@remix-run/vercel": "^1.9.0",
    "@vercel/node": "^2.8.2",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "postcss": "^8.4.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "rehype-prism-plus": "^1.5.0",
    "remix": "^1.9.0",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "@types/lodash": "^4.14.191",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/sharp": "^0.31.1",
    "concurrently": "^7.6.0",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.16.12",
    "firebase-tools": "^11.19.0",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  }
}
