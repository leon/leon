{
  "packageManager": "pnpm@7.13.4",
  "private": true,
  "name": "leon",
  "description": "leon.id",
  "license": "",
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf build && rm -rf public/build",
    "build": "pnpm build:css && pnpm remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --minify",
    "build:assets": "cpy --parents {articles,labs,photos,projects} public",
    "dev": "concurrently \"pnpm dev:css\" \"pnpm remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --watch",
    "start": "remix-serve build",
    "deploy:setup": "gcloud auth print-access-token | podman login -u oauth2accesstoken --password-stdin eu.gcr.io",
    "docker:build": "pnpm clean && podman build . -t eu.gcr.io/leon-id/leon-id:latest",
    "docker:push": "podman push eu.gcr.io/leon-id/leon-id:latest",
    "deploy:cloudrun": "gcloud run deploy remix --project leon-id --source . --platform=managed --allow-unauthenticated --region=europe-west1 --concurrency=1000 --max-instances=10 --timeout=10 --cpu=2 --memory=1024Mi",
    "deploy": "pnpm build && pnpm deploy:cloudrun",
    "deploy:hosting": "pnpm firebase deploy --only hosting"
  },
  "dependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "autoprefixer": "^10.4.12",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "mdx-bundler": "^9.0.1",
    "postcss": "^8.4.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-prism-plus": "^1.5.0",
    "remix": "^1.7.2",
    "sharp": "^0.31.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "@types/lodash": "^4.14.186",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/sharp": "^0.31.0",
    "concurrently": "^7.4.0",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.14.0",
    "firebase-tools": "^11.14.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  }
}
