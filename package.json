{
  "private": true,
  "name": "leon",
  "description": "leon.id",
  "license": "",
  "scripts": {
    "clean": "rm -rf build && rm -rf public/build",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --minify",
    "build:assets": "cpy --parents {articles,labs,photos,projects} public",
    "pre:dev": "remix setup node",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind-build.css --watch",
    "start": "remix-serve build",
    "deploy:setup": "gcloud auth configure-docker europa-docker.pkg.dev",
    "docker:build": "npm run clean && npm run build && docker build . -t eu.gcr.io/leon-id/leon-id:latest",
    "docker:push": "docker push eu.gcr.io/leon-id/leon-id:latest",
    "deploy:cloudrun": "gcloud run deploy remix --project leon-id --platform=managed --allow-unauthenticated --region=europe-west1 --image=eu.gcr.io/leon-id/leon-id:latest --concurrency=1000 --max-instances=10 --timeout=10 --cpu=2 --memory=1024Mi",
    "deploy": "npm run docker:build && npm run docker:push && npm run deploy:cloudrun",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "esbuild": "^0.14.13",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "mdx-bundler": "^8.0.1",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-prism-plus": "^1.3.1",
    "remix": "^1.1.3",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/typography": "^0.5.0",
    "@types/lodash": "^4.14.178",
    "@types/lodash-es": "^4.17.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/sharp": "^0.29.5",
    "concurrently": "^7.0.0",
    "cpy-cli": "^3.1.1",
    "firebase-tools": "^10.1.2",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
